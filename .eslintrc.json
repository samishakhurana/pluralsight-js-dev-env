{
  "root": true, // no other eslint file in any directory
  "extends": [
    "eslint:recommended", // rules recommended by eslint
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 7, // version of JS being used
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": { // to override recommended rules
    "no-console": 1 // 0 -> off, 1 -> warning, 2- > error
  }
}
